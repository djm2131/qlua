require "stdlib"

function tfmt(x)
   local r = "{"
   local s = ""
   for i,v in pairs(x) do
      r = r .. s .. tostring(v)
      s = ","
   end
   return r .. "}"
end

function foreach(t,fn, zz)
   local r = #t
   local p = {}
   local z = zz
   local function scan(k)
      if k == r then
         z = fn(z, p)
      else
         local kk = k + 1
         for i = 0, t[kk] - 1 do
            p[kk] = i
            scan(kk)
         end
      end
   end
   scan(0)
   return z
end


