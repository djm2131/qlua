(include "types.qa0")

(procedure zero-fermion ([stem "f_zero"]
                          prec&color)
           ([R         pointer "r"         "struct FermionX *"      ]
            [size      int     "size"      "size_t"                    ])
   (op qcd-zerof () (vA) ())
   (loop () (i [const 0] [reg size])
     (store qcd-fermion () ([reg R]) [reg vA])
     (op pointer-add () (R) ([reg R] [const (size-of Fermion)]))))
